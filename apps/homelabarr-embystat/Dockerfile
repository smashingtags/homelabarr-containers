  echo "**** update system ****" && \
    apt-get update -yqq && \
  echo "**** install packages ****" && \
    apt-get install -yqq jq libicu66 libssl1.0 unzip curl && \
  echo "**** install 'homelabarr-embystat' ****" && \
    mkdir -p /opt/embystat && \
    curl -o /tmp/embystat.zip -L "https://github.com/mregni/EmbyStat/releases/download/${VERSION}/EmbyStat-ubuntu-x64-v${VERSION}.zip" && \
    unzip -q /tmp/embystat.zip -d /opt/embystat/ 2> /dev/null || true && \
    chmod +x /opt/embystat/EmbyStat && \        
  echo "**** cleanup ****" && \
    rm -rf /tmp/* /var/lib/apt/lists/* /var/tmp/*

COPY ./apps/homelabarr-embystat/root/ /

