FROM alpine:3.22.1 as buildstage

LABEL org.opencontainers.image.source="https://github.com/smashingtags/homelabarr-containers"

ARG TARGETPLATFORM
ARG BUILDPLATFORM

RUN  \
  echo "**** install build packages ****" && \
    apk add -U --update --no-cache git bash ca-certificates shadow && \
    mkdir -p /app && \
    git clone --quiet https://github.com/Xarritomi/auto-replyarr.git /app && \
    rm -rf /app/*.md /app/Dockerfile docker-compose.yml

FROM node:16-alpine3.14
ENV DOCKER=true
COPY --from=buildstage /app /app

WORKDIR /app

RUN  \
  echo "**** install final packages ****" && \
    apk add -U --update --no-cache ca-certificates bash && \
    mkdir -p /app && \
    npm install -g npm@8.5.0 && \
   npm install -g ts-node && \
   npm install

VOLUME /config

CMD ["/bin/bash", "/app/entrypoint.sh"]
