FROM alpine:3.22.1 as buildstage
LABEL org.opencontainers.image.source="https://github.com/smashingtags/homelabarr-containers"

ARG TARGETPLATFORM
ARG BUILDPLATFORM

RUN \
  echo "**** install build packages ****" && \
    apk add -U --update --no-cache --quiet \
    jq git && \
    mkdir -p /app && \
    git clone https://github.com/revenz/Fenrus.git /app && \
    rm -rf /app/Dockerfile ./.git

FROM alpine:3.22.1

COPY --from=buildstage /app /app

WORKDIR /app

ARG TARGETPLATFORM
ARG BUILDPLATFORM

ARG VERSION=""
ARG BRANCH="master"

WORKDIR /app

RUN \
  echo "**** install packages ****" && \
    apk add -U --update --no-cache --quiet --virtual=build-dependencies npm curl build-base g++ cairo-dev jpeg-dev pango-dev giflib-dev && \
  echo "**** install runtime packages ****" && \
    mkdir -p /app && \
    apk add -U --update --no-cache --quiet \
    nodejs cairo jpeg pango giflib msttcorefonts-installer fontconfig && \
    update-ms-fonts &>/dev/null && fc-cache -f &>/dev/null && \
  echo "**** install 'homelabarr-fenrus' ****" && \
    npm install && \
    npm ci --only=production && \
    mkdir -p ./data && \
  echo "**** cleanup ****" && \
    apk del --purge build-dependencies && \
    rm -rf /root/.cache /tmp/*

EXPOSE 3000
CMD [ "node", "app.js" ]
